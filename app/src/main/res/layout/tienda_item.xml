<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tienda_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/SuperName1"
            android:scaleType="centerCrop"
            android:src="@drawable/dia" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/TituloElementoTienda"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tienda_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SuperName1"
                android:textColor="#888888"
                android:textSize="14sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_numValidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stringValidos"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_numTotales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stringTotales"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>